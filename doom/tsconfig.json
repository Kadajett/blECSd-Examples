{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"skipLibCheck": true,
		"declaration": true,
		"outDir": "dist",
		"rootDir": "."
	},
	"include": ["*.ts", "**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
